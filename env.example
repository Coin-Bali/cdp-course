# --- Global CDP Authentication ---
# Get these from https://portal.cdp.coinbase.com/ access/api
CDP_API_KEY_ID="your_cdp_api_key_id"
CDP_API_KEY_SECRET="your_cdp_api_key_secret_pem_format"

# --- Module 1: Onramp/Offramp ---
CDP_APP_ID="your_cdp_app_id"
DESTINATION_ADDRESS="0x..."
DESTINATION_NETWORK="base"
PURCHASE_CURRENCY="ETH"
REDIRECT_URL="http://localhost:5001/return"

# --- Module 2: Advanced Trade API ---
# Uses CDP Keys (v2) or Legacy Keys. 
# If using legacy keys (optional, scripts currently use CDP JWT):
# ADV_TRADE_API_KEY=""
# ADV_TRADE_API_SECRET=""

# --- Module 3: Staking API ---
STAKING_NETWORK_ID="ethereum-hoodi" # or ethereum-mainnet
STAKING_ASSET_ID="ETH"
STAKING_ADDRESS_ID="your_stakeable_wallet_id"
STAKING_REWARDS_PATH="/platform/v1/stake/rewards/ethereum/0x..."

# --- Module 4: Server Wallet (WaaS) ---
# Wallet Secret is required for signing operations (Create Wallet, Send Tx)
CDP_WALLET_SECRET="your_wallet_secret_pem_format"
EVM_SOURCE_ADDRESS="0x..."
EVM_DESTINATION_ADDRESS="0x..."
EVM_NETWORK="base-sepolia"
SOLANA_SOURCE_ADDRESS="solana_address..."
SOLANA_NETWORK="solana-devnet"

# --- Module 6: Sign in with Coinbase (SIWC) ---
# Get these from https://portal.cdp.coinbase.com/products/sign-in-with-coinbase
SIWC_CLIENT_ID="your_oauth_client_id"
SIWC_CLIENT_SECRET="your_oauth_client_secret"
SIWC_REDIRECT_URI="http://localhost:5000/callback"
SIWC_SCOPES="wallet:user:read offline_access"

# --- Module 7: Commerce / Business ---
COMMERCE_WEBHOOK_SECRET="your_commerce_webhook_secret"
BUSINESS_API_KEY_ID="your_business_api_key_id"
BUSINESS_API_KEY_SECRET="your_business_api_key_secret"

# --- Module 8: Paymaster ---
PAYMASTER_RPC_URL="https://api.developer.coinbase.com/rpc/v1/base-sepolia/your_key"

# --- Module 9: Trade API (Swaps) ---
SWAP_NETWORK="base"
SWAP_FROM_TOKEN_ADDRESS="0x4200000000000000000000000000000000000006" # WETH on Base
SWAP_TO_TOKEN_ADDRESS="0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913" # USDC on Base
SWAP_FROM_AMOUNT="1000000000000000"
SWAP_TAKER_ADDRESS="0x..."

# --- Module 10: Transfer API ---
TRANSFER_SOURCE_ACCOUNT_ID="your_account_id"
TRANSFER_TO_ADDRESS="0x..."

# --- Module 11: Data & Node ---
CDP_NODE_RPC_URL="https://api.developer.coinbase.com/rpc/v1/base/your_key"

